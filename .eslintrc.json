{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "standard",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-native", "flowtype", "prettier", "standard"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false
      }
    ],
    "no-undef": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    // "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "prefer-const": "error",
    "react/react-in-jsx-scope": "off"
  }
}
